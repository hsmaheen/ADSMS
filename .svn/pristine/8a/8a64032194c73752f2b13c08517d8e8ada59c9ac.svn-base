        //Method to check for Low Stock Levels
        public List<item> checkLowStockLevel(string email)
        {
            List<item> lowitems = new List<item>();
            lowitems = drep.findLowQuantItems();
            if (lowitems.Count != 0)
            {

                sendLowStockEmail(email, lowitems);
                return lowitems;

            }
            return lowitems;


        }

