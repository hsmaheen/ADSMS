.loading{
	background:url('../Images/loading-anim.gif') no-repeat 50% 50%;
	min-height:30px;
	min-width:30px;
}
.overlay{
	background-color:#FFF;
	position:absolute;
	display:none;
	z-index:2000;
	opacity:0.7;
	filter:Alpha(Opacity=70);
}
.page-loader{
	position:absolute;
	display:none;
	margin:-15px 0 0 -15px; /*Negative half the width and height of the loader so it can be correctly centered*/
	height:30px;
	width:30px;
	z-index:2001;
}